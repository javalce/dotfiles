#!/bin/zsh

#
# Init
#

zmodule environment

#
# Completion
#

zmodule zsh-users/zsh-completions --fpath src
zmodule completion

#
# Prompt
#

zmodule joke/zim-starship

#
# Utils
#

zmodule termtitle
zmodule utility
zmodule kiesman99/zim-zoxide
zmodule sunlei/zsh-ssh

#
# Oh My Zsh plugins (no alternative modules)
#

zmodule ohmyzsh/ohmyzsh --root plugins/aliases
zmodule ohmyzsh/ohmyzsh --root plugins/colored-man-pages
zmodule ohmyzsh/ohmyzsh --root plugins/pj

#
# Editor
#

zmodule input

#
# Custom plugins
#

# zmodule ${ZSH_PLUGINS}/pj
zmodule ${ZSH_PLUGINS}/atuin
zmodule ${ZSH_PLUGINS}/clipboard
zmodule ${ZSH_PLUGINS}/fnm
zmodule ${ZSH_PLUGINS}/git
zmodule ${ZSH_PLUGINS}/pnpm
zmodule git@github.com:g-plane/pnpm-shell-completion.git --on-pull './zplug.zsh'
zmodule ${ZSH_PLUGINS}/bun
zmodule ${ZSH_PLUGINS}/python
# zmodule ${ZSH_PLUGINS}/multiplexor

#
# Fish-like features
#

zmodule zsh-users/zsh-syntax-highlighting
zmodule zsh-users/zsh-autosuggestions
